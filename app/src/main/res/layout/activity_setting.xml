<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.mine.setting.SettingActivity">

    <com.hjq.bar.TitleBar
        android:id="@+id/setting_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:title="@string/title_setting">

    </com.hjq.bar.TitleBar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/setting_title"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorBackgroundDark"
            android:paddingBottom="@dimen/dimen_8"
            android:paddingLeft="@dimen/dimen_24"
            android:paddingTop="@dimen/dimen_8"
            android:text="提示音"
            android:textColor="@color/black"
            android:textSize="@dimen/font_10" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/icon_sound"
                android:drawablePadding="@dimen/dimen_8"
                android:padding="@dimen/dimen_24"
                android:text="@string/sound_text"
                android:textColor="@color/black" />

            <com.suke.widget.SwitchButton
                android:id="@+id/setting_tone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dimen_24"
                app:sb_checked="true" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:drawablePadding="@dimen/dimen_8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/icon_shake"
                android:padding="@dimen/dimen_24"
                android:text="振动"
                android:textColor="@color/black" />

            <com.suke.widget.SwitchButton
                android:id="@+id/setting_vibration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dimen_24"
                app:sb_checked="true" />

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorBackgroundDark"
            android:paddingBottom="@dimen/dimen_8"
            android:paddingLeft="@dimen/dimen_24"
            android:paddingTop="@dimen/dimen_8"
            android:text="免打扰"
            android:textColor="@color/black"
            android:textSize="@dimen/font_10" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:drawablePadding="@dimen/dimen_8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/icon_like"
                android:padding="@dimen/dimen_24"
                android:text="点赞"
                android:textColor="@color/black" />

            <com.suke.widget.SwitchButton
                android:id="@+id/setting_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dimen_24"
                app:sb_checked="true" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:drawablePadding="@dimen/dimen_8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/icon_follower"
                android:padding="@dimen/dimen_24"
                android:text="关注"
                android:textColor="@color/black" />

            <com.suke.widget.SwitchButton
                android:id="@+id/setting_follow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dimen_24"
                app:sb_checked="true" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:drawablePadding="@dimen/dimen_8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/icon_news"
                android:padding="@dimen/dimen_24"
                android:text="新消息"
                android:textColor="@color/black" />

            <com.suke.widget.SwitchButton
                android:id="@+id/setting_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dimen_24"
                app:sb_checked="true" />

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorBackgroundDark"
            android:paddingBottom="@dimen/dimen_8"
            android:paddingLeft="@dimen/dimen_24"
            android:paddingTop="@dimen/dimen_8"
            android:text="隐私设置"
            android:textColor="@color/black"
            android:textSize="@dimen/font_10" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:drawablePadding="@dimen/dimen_8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/icon_homepage"
                android:padding="@dimen/dimen_24"
                android:text="查看主页"
                android:textColor="@color/black" />

            <com.suke.widget.SwitchButton
                android:id="@+id/setting_browse_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dimen_24"
                app:sb_checked="true" />

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorBackgroundDark"
            android:paddingBottom="@dimen/dimen_8"
            android:paddingLeft="@dimen/dimen_24"
            android:paddingTop="@dimen/dimen_8"
            android:text="其他"
            android:textColor="@color/black"
            android:textSize="@dimen/font_10" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:drawablePadding="@dimen/dimen_8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/icon_feedback"
                android:padding="@dimen/dimen_24"
                android:text="问题反馈"
                android:textColor="@color/black" />

            <ImageView
                android:src="@drawable/right_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dimen_24" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:drawablePadding="@dimen/dimen_8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/icon_clean"
                android:padding="@dimen/dimen_24"
                android:text="清除缓存"
                android:textColor="@color/black" />

            <ImageView
                android:src="@drawable/right_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dimen_24" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:drawablePadding="@dimen/dimen_8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/icon_about"
                android:padding="@dimen/dimen_24"
                android:text="关于"
                android:textColor="@color/black" />

            <ImageView
                android:src="@drawable/right_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dimen_24" />

        </RelativeLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/setting_title"
        android:background="@color/white"
        android:orientation="vertical"
        android:visibility="gone">


        <TextView
            style="@style/text_menu_right"
            android:text="消息通知" />

        <View style="@style/line_view" />

        <TextView
            style="@style/text_menu_right"
            android:text="隐私" />

        <View style="@style/line_view" />

        <TextView
            style="@style/text_menu_right"
            android:text="免打扰" />

        <View style="@style/line_view" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_44"
            android:background="@color/gray_light" />

        <View style="@style/line_view" />

        <TextView
            style="@style/text_menu_right"
            android:text="常见问题" />

        <View style="@style/line_view" />

        <TextView
            style="@style/text_menu_right"
            android:text="意见反馈" />

        <View style="@style/line_view" />

        <TextView
            style="@style/text_menu_right"
            android:text="新版功能" />

        <View style="@style/line_view" />

        <TextView
            style="@style/text_menu_right"
            android:text="版本更新" />

    </LinearLayout>

</RelativeLayout>
